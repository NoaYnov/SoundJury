# Exemples de variables d'environnement pour SoundJury
# Copiez ce fichier vers .env et remplissez vos vraies valeurs

# Sécurité Flask
SECRET_KEY=your-super-secret-key-here-change-me

# Configuration Supabase (Recommandé)
SUPABASE_URL=https://votre-projet.supabase.co
SUPABASE_ANON_KEY=votre-clé-anon-publique
SUPABASE_SERVICE_ROLE_KEY=votre-clé-service-role

# Configuration base de données
DATABASE_TYPE=supabase

# Configuration Email (Gmail recommandé)
MAIL_USERNAME=votre-email@gmail.com
MAIL_PASSWORD=votre-mot-de-passe-app-gmail
MAIL_DEFAULT_SENDER=votre-email@gmail.com
EMAIL_ENABLED=true
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True

# API Spotify
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Configuration Flask
FLASK_ENV=development
DEBUG=true
HOST=127.0.0.1
PORT=5000

# Configuration CORS
CORS_ORIGINS=http://localhost:5000,http://localhost:5000
